{
  "name": "muzikie",
  "version": "0.1.0-alpha.0",
  "description": "Web based music player of Muzikie",
  "sideEffects": false,
  "author": "Block Made GmbH",
  "license": "ISC",
  "scripts": {
    "build": "remix build",
    "remix:dev": "remix build && run-p \"dev:*\"",
    "dev": "concurrently \"npm run dev:css\" \"npm run remix:dev\"",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "postinstall": "remix-esbuild-override",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "dev:css": "sh collectStyles.sh && postcss styles --base styles --dir app/styles -w",
    "build:css": "sh collectStyles.sh && postcss styles --base styles --dir app/styles --env production",
    "lint": "npx eslint app --ext .js,.jsx,.ts,.tsx --fix",
    "test": "jest --config ./jest.config.js"
  },
  "dependencies": {
    "@liskhq/lisk-api-client": "^6.0.0-alpha.7",
    "@liskhq/lisk-client": "^6.0.0-alpha.7",
    "@remix-run/express": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@types/jest": "^29.2.2",
    "bip39": "^3.0.4",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "crypto-js": "^4.1.1",
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1",
    "ts-jest": "^29.0.3"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.20.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-localstorage-mock": "^2.4.22",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-nesting": "^10.1.10",
    "postcss-partial-import": "^4.1.0",
    "remix-esbuild-override": "^3.0.4",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
